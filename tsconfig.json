{
	"compileOnSave": false,
	"ts-node": {
		"transpileOnly": true
	},
	"compilerOptions": {
		"target": "es2020",
		"moduleResolution": "Node",
		"module": "CommonJS",
		"lib": [
			"es2016",
			"es2018",
			"es2020",
			"esnext",
		],
		"strict": true,
		"baseUrl": ".",
		"rootDirs": [
			"src",
			"test",
		],
		"outDir": "dist",
		"paths": {
			"src/*": [
				"./src/*"
			],
			"test/*": [
				"./test/*"
			]
		},
		"typeRoots": [
			"./node_modules/@types"
		],
		"types": [
			"vitest",
			"node"
		],
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"declaration": false,
		"strictPropertyInitialization": false,
		"resolveJsonModule": true,
		"alwaysStrict": true,
		"removeComments": false,
		"noImplicitReturns": false,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"skipLibCheck": true
	},
	"include": [
		"database/migrations/**/*",
		"database/assets/**/*",
		"src/**/*",
		"test/**/*",
		"index.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"**/*.test.ts",
		"**/*.test.tsx",
		"__tests__"
	]
}
